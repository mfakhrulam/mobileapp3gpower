<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_1"
        >
        <ImageView
            android:id="@+id/imageViewBg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="?attr/colorOnPrimary"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_top_left"
            android:layout_marginTop="-30dp"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile_foreground"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/txtv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            android:text="Fakhrul Amin"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="?attr/android:textColorPrimary"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/imageView2"/>

        <TextView
            android:id="@+id/txtv_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:text="user@gmail.com"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?attr/android:textColorPrimary"
            android:textSize="16sp"
            android:layout_below="@id/txtv_user_name"
            android:layout_toRightOf="@id/imageView2"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/txtv_user_name"
            android:layout_marginStart="24dp"

            android:layout_marginTop="80dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hai" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/card_view"
            android:layout_margin="24dp"
            app:cardCornerRadius="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hai" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Logout"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"/>


    </RelativeLayout>


</FrameLayout>