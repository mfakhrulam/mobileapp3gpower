<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProduct">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:backgroundTint="@color/white"
            android:id="@+id/back_btn"
            />

        <TextView
            android:id="@+id/txtv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Update Produk"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:layout_toRightOf="@id/back_btn"/>

        <TextView
            android:id="@+id/txtv_subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtv_heading"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Update/Edit data produk"
            android:layout_marginStart="24dp"

            android:textColor="@color/grey"
            android:textSize="16sp" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtv_subheading"
            android:layout_marginTop="42dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Nama Produk"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/inp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtv_name"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Masukkan Nama Produk"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inp_name"
                    android:layout_alignStart="@+id/txtv_name"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Stok"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/inp_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtv_stock"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Masukkan Stok"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inp_stock"
                    android:layout_alignStart="@+id/txtv_name"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Harga"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/inp_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtv_price"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Masukkan Harga"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtv_warranty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inp_price"
                    android:layout_alignStart="@+id/txtv_name"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Garansi"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/inp_warranty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtv_warranty"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Masukkan Garansi"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="24dp"
                    android:layout_below="@id/inp_warranty"
                    android:textSize="16sp" />
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>